%tr
  %td
    = index + 1
  %td
    = question.user.username
  %td
    = question.title
  %td
    %small
      %em= question.age_string
  %td
    - if question.user == current_user_get
      = icon_action_link("pencil", "Edit")
      %br
      = icon_action_link("trash", "Cancel")
      %br
    = icon_action_link("list", "Details")
